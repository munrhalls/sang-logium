      {
        "_type": "overviewField",
        "_key": "1c649c11-8216-4820-a863-3e489ad0e342",
        "title": "Feature",
        "value": "Supports up to 20V/5A",
        "information": "Features"
      },
      {
        "_type": "overviewField",
        "_key": "a8f34e09-35ec-4adf-bf62-54bf0ac68db7",
        "title": "Feature",
        "value": "High-speed USB 3.0 Data Transfer",
