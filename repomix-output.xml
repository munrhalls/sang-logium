    sortOptions: recommendedSortables,
    categoryMappings: [
      {
        path: `/${topLevelCategory}`,
        sortOptions: recommendedSortables.map((sort) => sort.name),
      },
    ],
  };

  console.log("\n===== SANITY SCHEMA DOCUMENT TEMPLATE =====");
  console.log(JSON.stringify(sampleDocument, null, 2));
}

