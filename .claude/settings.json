{"environment": {
    "DISABLE_TELEMETRY": "1",
    "API_TIMEOUT_MS": "600000"
  },
  "allow": [
    "Read(**)",
    "Write(src/**)",
    "Write(app/**)",
    "Write(components/**)",
    "Bash(npm*)",
    "Bash(pnpm*)",
    "git add",
    "git commit"
  ],
  "deny": [
    "Read(.env*)",
    "Bash(rm -rf*)",
    "Bash(sudo*)"
  ],
  "hooks": {
    "PostToolUse": {
      "typescript": "npx tsc --noEmit --skipLibCheck",
      "formatting": "npx prettier --write"
    }
  }
}